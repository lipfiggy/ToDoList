@model IEnumerable<ToDoList.Models.TaskItem>

    <div class="progressBar">
        <p>@(ViewBag.Percent)%</p>
        <div class="progress">
        <div class="progress-bar bg-warning" role="progressbar"
            style="width:@(ViewBag.Percent)%"></div>
        </div>
    </div>
<ul id="myUL">
    @foreach (var item in Model)
    {
        <li>
            <div class="checkbox">
                @Html.CheckBoxFor(modelItem => item.Done, new{ id = item.Id, @class = "ActiveCheck"})
            </div>

            @if(item.Done)
            {
                <div class="description" id="checkedTask">@Html.DisplayFor(modelItem => item.Description)</div>
            }
            else
            {
                <div class="description">@Html.DisplayFor(modelItem => item.Description)</div>
            }

            <form asp-action="DeleteTask" asp-route-id=@(item.Id)>
                <button type="submit" class="close">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x" viewBox="0 0 16 16">
                        <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z" />
                    </svg>
                </button>
            </form>


        </li>
    }
</ul>

<script src="~/Custom scripts/AddCheckBoxListener.js"></script>